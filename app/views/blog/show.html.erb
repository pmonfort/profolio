<% content_for :title, @post.title %>

<div class="w-full max-w-4xl mx-auto">
  <%= link_to blog_path, class: "inline-flex items-center text-violet-600 dark:text-violet-400 hover:text-violet-800 dark:hover:text-violet-300 mb-8 transition-colors font-medium" do %>
    ‚Üê Back to Blog
  <% end %>

  <article class="bg-white dark:bg-neutral-900 rounded-2xl shadow-xl border border-neutral-200 dark:border-neutral-800 p-8 md:p-12">
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <span class="px-3 py-1 bg-violet-100 dark:bg-violet-900 text-violet-900 dark:text-violet-100 rounded-full text-xs font-semibold uppercase border border-violet-300 dark:border-violet-700">
          <%= @post.category %>
        </span>
        <% if @post.published_at %>
          <time class="text-sm text-neutral-600 dark:text-neutral-400">
            <%= @post.published_at.strftime("%B %d, %Y") %>
          </time>
        <% end %>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-neutral-50 mb-4">
        <%= @post.title %>
      </h1>
      <% if @post.excerpt.present? %>
        <p class="text-xl text-neutral-700 dark:text-neutral-300 italic">
          <%= @post.excerpt %>
        </p>
      <% end %>
    </div>

    <div class="rich-text-content text-lg leading-relaxed">
      <%= @post.content %>
    </div>
  </article>
</div>
