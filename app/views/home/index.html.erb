<% content_for :title, "Home" %>

<div class="w-full">
  <div class="text-center mb-16">
    <h1 class="text-5xl md:text-6xl font-bold text-neutral-900 dark:text-neutral-50 mb-4">
      Software Developer
    </h1>
    <p class="text-xl text-neutral-700 dark:text-neutral-300 max-w-2xl mx-auto">
      Building modern web applications and sharing knowledge through code
    </p>
  </div>

  <div class="grid md:grid-cols-2 gap-8 mb-16">
    <%= link_to profile_path, class: "group block p-8 bg-white dark:bg-neutral-900 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-800 hover:shadow-xl hover:border-violet-300 dark:hover:border-violet-700 transition-all duration-300 hover:-translate-y-1" do %>
      <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-50 mb-3 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">
        Portfolio
      </h2>
      <p class="text-neutral-700 dark:text-neutral-300">
        Learn about my experience, skills, and projects
      </p>
    <% end %>

    <%= link_to blog_path, class: "group block p-8 bg-white dark:bg-neutral-900 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-800 hover:shadow-xl hover:border-violet-300 dark:hover:border-violet-700 transition-all duration-300 hover:-translate-y-1" do %>
      <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-50 mb-3 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">
        Blog
      </h2>
      <p class="text-neutral-700 dark:text-neutral-300">
        Articles and tutorials about web development
      </p>
    <% end %>
  </div>

  <div class="mt-16">
    <h2 class="text-3xl font-bold text-neutral-900 dark:text-neutral-50 mb-8">Latest Posts</h2>
    <% latest_posts = Post.published.limit(3) %>
    <% if latest_posts.any? %>
      <div class="space-y-6">
        <% latest_posts.each do |post| %>
          <%= link_to blog_post_path(post.slug), class: "block group" do %>
            <article class="bg-white dark:bg-neutral-900 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-800 p-8 hover:shadow-xl hover:border-violet-300 dark:hover:border-violet-700 transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-center gap-3 mb-3">
                <span class="px-3 py-1 bg-violet-100 dark:bg-violet-900 text-violet-900 dark:text-violet-100 rounded-full text-xs font-semibold uppercase border border-violet-300 dark:border-violet-700">
                  <%= post.category %>
                </span>
                <% if post.published_at %>
                  <time class="text-sm text-neutral-600 dark:text-neutral-400">
                    <%= post.published_at.strftime("%B %d, %Y") %>
                  </time>
                <% end %>
              </div>
              <h3 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-50 mb-3 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors">
                <%= post.title %>
              </h3>
              <% if post.excerpt.present? %>
                <p class="text-neutral-700 dark:text-neutral-300 leading-relaxed">
                  <%= truncate(post.excerpt, length: 150) %>
                </p>
              <% end %>
            </article>
          <% end %>
        <% end %>
      </div>
      <div class="mt-8 text-center">
        <%= link_to "View All Posts â†’", blog_path, class: "text-violet-600 dark:text-violet-400 hover:text-violet-800 dark:hover:text-violet-300 font-medium transition-colors" %>
      </div>
    <% else %>
      <p class="text-neutral-700 dark:text-neutral-300 text-center py-8">No posts published yet.</p>
    <% end %>
  </div>
</div>
