<%= form_with(model: [:admin, post], class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-300 px-4 py-3 rounded-lg">
      <h2 class="font-semibold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc ml-6 space-y-1">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-slate-900 dark:text-white mb-2" %>
    <%= form.text_field :title, class: "block w-full rounded-md border px-3 py-2 bg-white dark:bg-slate-700 text-slate-900 dark:text-white border-slate-300 dark:border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500 dark:border-red-500' if post.errors[:title].any?}" %>
  </div>

  <div>
    <%= form.label :slug, class: "block text-sm font-medium text-slate-900 dark:text-white mb-2" %>
    <%= form.text_field :slug, class: "block w-full rounded-md border px-3 py-2 bg-white dark:bg-slate-700 text-slate-900 dark:text-white border-slate-300 dark:border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500 dark:border-red-500' if post.errors[:slug].any?}" %>
  </div>

  <div>
    <%= form.label :excerpt, class: "block text-sm font-medium text-slate-900 dark:text-white mb-2" %>
    <%= form.text_area :excerpt, rows: 4, class: "block w-full rounded-md border px-3 py-2 bg-white dark:bg-slate-700 text-slate-900 dark:text-white border-slate-300 dark:border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500 dark:border-red-500' if post.errors[:excerpt].any?}" %>
  </div>

  <div>
    <%= form.label :category, class: "block text-sm font-medium text-slate-900 dark:text-white mb-2" %>
    <%= form.text_field :category, class: "block w-full rounded-md border px-3 py-2 bg-white dark:bg-slate-700 text-slate-900 dark:text-white border-slate-300 dark:border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500 dark:border-red-500' if post.errors[:category].any?}" %>
  </div>

  <div class="flex items-center gap-3">
    <%= form.check_box :published, class: "h-5 w-5 rounded border-slate-300 dark:border-slate-600 text-blue-600 focus:ring-blue-500 focus:ring-2 #{'border-red-500 dark:border-red-500' if post.errors[:published].any?}" %>
    <%= form.label :published, class: "text-sm font-medium text-slate-900 dark:text-white" %>
  </div>

  <div>
    <%= form.label :published_at, class: "block text-sm font-medium text-slate-900 dark:text-white mb-2" %>
    <%= form.datetime_field :published_at, class: "block w-full rounded-md border px-3 py-2 bg-white dark:bg-slate-700 text-slate-900 dark:text-white border-slate-300 dark:border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500 dark:border-red-500' if post.errors[:published_at].any?}" %>
  </div>

  <div>
    <%= form.label :content, "Content", class: "block text-sm font-medium text-slate-900 dark:text-white mb-2" %>
    <%= form.rich_text_area :content, class: "block w-full rounded-md border px-3 py-2 bg-white dark:bg-slate-700 text-slate-900 dark:text-white border-slate-300 dark:border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 min-h-[300px] #{'border-red-500 dark:border-red-500' if post.errors[:content].any?}" %>
  </div>

  <div class="pt-4">
    <%= form.submit class: "px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-medium transition-colors cursor-pointer shadow-lg hover:shadow-xl" %>
  </div>
<% end %>

