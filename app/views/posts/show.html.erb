<% content_for :title, @post.title %>

<div class="w-full max-w-4xl mx-auto">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-200 rounded-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-6">
    <%= link_to posts_path, class: "inline-flex items-center text-violet-600 dark:text-violet-400 hover:text-violet-800 dark:hover:text-violet-300 transition-colors mb-6 font-medium" do %>
      ‚Üê Back to Posts
    <% end %>
  </div>

  <article class="bg-white dark:bg-neutral-900 rounded-2xl shadow-xl border border-neutral-200 dark:border-neutral-800 p-8 md:p-12 mb-8">
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <span class="px-3 py-1 bg-violet-100 dark:bg-violet-900 text-violet-900 dark:text-violet-100 rounded-full text-xs font-semibold uppercase border border-violet-300 dark:border-violet-700">
          <%= @post.category %>
        </span>
        <span class="px-3 py-1 <%= @post.published? ? 'bg-green-100 dark:bg-green-900 text-green-900 dark:text-green-100 border border-green-300 dark:border-green-700' : 'bg-yellow-100 dark:bg-yellow-900 text-yellow-900 dark:text-yellow-100 border border-yellow-300 dark:border-yellow-700' %> rounded-full text-xs font-semibold">
          <%= @post.published? ? "Published" : "Draft" %>
        </span>
        <% if @post.published_at %>
          <time class="text-sm text-neutral-600 dark:text-neutral-400">
            <%= @post.published_at.strftime("%B %d, %Y") %>
          </time>
        <% end %>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-neutral-50 mb-4">
        <%= @post.title %>
      </h1>
      <% if @post.excerpt.present? %>
        <p class="text-xl text-neutral-700 dark:text-neutral-300 italic">
          <%= @post.excerpt %>
        </p>
      <% end %>
    </div>

    <div class="rich-text-content text-lg leading-relaxed">
      <%= @post.content %>
    </div>
  </article>

  <div class="flex flex-wrap gap-3">
    <%= link_to "Edit this post", edit_post_path(@post), class: "px-4 py-2 bg-neutral-50 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-700 text-neutral-900 dark:text-neutral-50 rounded-md font-medium transition-colors shadow-sm" %>
    <%= link_to "Back to posts", posts_path, class: "px-4 py-2 bg-neutral-50 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-700 text-neutral-900 dark:text-neutral-50 rounded-md font-medium transition-colors shadow-sm" %>
    <%= button_to "Delete this post", @post, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-700 dark:bg-red-600 dark:hover:bg-red-500 text-white rounded-md font-medium transition-colors cursor-pointer shadow-sm", data: { turbo_confirm: "Are you sure?" } %>
    <% if @post.published? %>
      <%= link_to "View on Blog", blog_post_path(@post.slug), class: "px-4 py-2 bg-violet-600 hover:bg-violet-700 dark:bg-violet-600 dark:hover:bg-violet-500 text-white rounded-md font-medium transition-colors shadow-sm" %>
    <% end %>
  </div>
</div>
