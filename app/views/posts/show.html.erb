<% content_for :title, @post.title %>

<div class="w-full max-w-4xl mx-auto">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-300 rounded-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-6">
    <%= link_to posts_path, class: "inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors mb-6" do %>
      ‚Üê Back to Posts
    <% end %>
  </div>

  <article class="bg-white dark:bg-slate-800 rounded-2xl shadow-xl p-8 md:p-12 mb-8">
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 rounded-full text-xs font-semibold uppercase">
          <%= @post.category %>
        </span>
        <span class="px-3 py-1 <%= @post.published? ? 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300' : 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300' %> rounded-full text-xs font-semibold">
          <%= @post.published? ? "Published" : "Draft" %>
        </span>
        <% if @post.published_at %>
          <time class="text-sm text-slate-500 dark:text-slate-400">
            <%= @post.published_at.strftime("%B %d, %Y") %>
          </time>
        <% end %>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4">
        <%= @post.title %>
      </h1>
      <% if @post.excerpt.present? %>
        <p class="text-xl text-slate-600 dark:text-slate-400 italic">
          <%= @post.excerpt %>
        </p>
      <% end %>
    </div>

    <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:text-slate-900 dark:prose-headings:text-white prose-p:text-slate-700 dark:prose-p:text-slate-300 prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-code:text-pink-600 dark:prose-code:text-pink-400 prose-strong:text-slate-900 dark:prose-strong:text-white prose-pre:bg-slate-900 dark:prose-pre:bg-slate-800">
      <%= @post.content %>
    </div>
  </article>

  <div class="flex flex-wrap gap-3">
    <%= link_to "Edit this post", edit_post_path(@post), class: "px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-900 dark:text-white rounded-md font-medium transition-colors" %>
    <%= link_to "Back to posts", posts_path, class: "px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-900 dark:text-white rounded-md font-medium transition-colors" %>
    <%= button_to "Delete this post", @post, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-md font-medium transition-colors cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
    <% if @post.published? %>
      <%= link_to "View on Blog", blog_post_path(@post.slug), class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-medium transition-colors" %>
    <% end %>
  </div>
</div>
