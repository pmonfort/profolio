<% content_for :title, "Posts" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-200 rounded-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-neutral-50">Posts</h1>
    <%= link_to "New post", new_post_path, class: "rounded-md px-4 py-2 bg-violet-600 hover:bg-violet-700 dark:bg-violet-600 dark:hover:bg-violet-500 text-white font-medium transition-colors shadow-sm" %>
  </div>

  <div id="posts" class="space-y-4">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white dark:bg-neutral-900 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-800 p-6 hover:shadow-xl transition-all duration-300">
          <div class="flex flex-col sm:flex-row justify-between items-start gap-4">
            <div class="flex-1">
              <%= render post %>
            </div>
            <div class="flex flex-wrap gap-2 sm:flex-nowrap">
              <%= link_to "Show", post, class: "px-4 py-2 bg-neutral-50 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-700 text-neutral-900 dark:text-neutral-50 rounded-md font-medium transition-colors text-sm shadow-sm" %>
              <%= link_to "Edit", edit_post_path(post), class: "px-4 py-2 bg-violet-50 dark:bg-violet-900 border border-violet-300 dark:border-violet-700 hover:bg-violet-100 dark:hover:bg-violet-800 text-violet-900 dark:text-violet-100 rounded-md font-medium transition-colors text-sm shadow-sm" %>
              <%= button_to "Delete", post, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-700 dark:bg-red-600 dark:hover:bg-red-500 text-white rounded-md font-medium transition-colors text-sm cursor-pointer shadow-sm", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white dark:bg-neutral-900 rounded-xl shadow-lg border border-neutral-200 dark:border-neutral-800 p-12 text-center">
        <p class="text-neutral-700 dark:text-neutral-300 mb-4">No posts found.</p>
        <%= link_to "Create your first post", new_post_path, class: "inline-block rounded-md px-4 py-2 bg-violet-600 hover:bg-violet-700 dark:bg-violet-600 dark:hover:bg-violet-500 text-white font-medium transition-colors shadow-sm" %>
      </div>
    <% end %>
  </div>
</div>
