<% content_for :title, "Posts" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-300 rounded-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white">Posts</h1>
    <%= link_to "New post", new_post_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors" %>
  </div>

  <div id="posts" class="space-y-4">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300">
          <div class="flex flex-col sm:flex-row justify-between items-start gap-4">
            <div class="flex-1">
              <%= render post %>
            </div>
            <div class="flex flex-wrap gap-2 sm:flex-nowrap">
              <%= link_to "Show", post, class: "px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-900 dark:text-white rounded-md font-medium transition-colors text-sm" %>
              <%= link_to "Edit", edit_post_path(post), class: "px-4 py-2 bg-blue-100 dark:bg-blue-900/30 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-800 dark:text-blue-300 rounded-md font-medium transition-colors text-sm" %>
              <%= button_to "Delete", post, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-500 text-white rounded-md font-medium transition-colors text-sm cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-12 text-center">
        <p class="text-slate-500 dark:text-slate-400 mb-4">No posts found.</p>
        <%= link_to "Create your first post", new_post_path, class: "inline-block rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
